#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t ;
	cin>>t;
	while(t--){
	    long long n;
	    cin>>n;
	    long long m;
	    m = n*(n-1)/2;
	    vector<long long> w(m);
	    for(int i = 0 ; i<m ; i++)cin>>w[i];
	    sort(w.begin(),w.end());
	    long long ans =0;
	    int node =1;
	    int k=0;
	    for(int i = 0 ; i<m ; i+=k){
	        ans += w[i];
	        k++;
	        
	    }
	    cout<<ans<<endl;
	}

}
