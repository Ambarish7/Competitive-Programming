#include <bits/stdc++.h>
using namespace std;
 
 
 
int main() {
  #ifndef ONLINE_JUDGE
    freopen("input.txt","r",stdin);
    freopen("output.txt","w",stdout);
#endif
    int t ;
    cin>>t;
    while(t--){
      long long n ,m;
      cin>>n>>m;
      vector<long long> a(n);
      for(int i = 0 ; i<n ; i++)cin>>a[i];
      
      long long ans =0;
      sort(a.begin(), a.end(), greater<long long>());
      int i=0;
      while(m>0 && i<n){
        ans += a[i]*(m);
        i++;
        m--;
      }
      cout<<ans<<endl;
    }
    return 0;
 
}
