#include <bits/stdc++.h>
using namespace std;



int main() {
#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
#endif
    int t;
    cin >> t;

    while (t--) {
        int n ;
        cin >> n;
        vector<long long> a(n), c(n);
        for (int i = 0 ; i < n ; i++)cin >> a[i];
        for (int i = 0 ; i < n ; i++)cin >> c[i];

        vector<long long > dp(n, 0);

        for (int i = 0 ; i < n; i++) {
            dp[i] = c[i];
            for (int j = 0 ; j < i; j++) {
                if (a[j] <= a[i]) {
                    dp[i] = max(dp[i], dp[j] + c[i]);
                }
            }
        }

        long long totalCost = accumulate(c.begin(), c.end(), 0LL);
        long long cost = *max_element(dp.begin(), dp.end());
        long long ans = totalCost - cost;
        cout << ans << endl;

    }
}
